---
layout: base.njk
title: "{{ title }}"
---

<article class="blog-post">
    <time datetime="{{ date | date("yyyy-MM-dd") }}" class="post-date">{{ date | date("MMMM dd, yyyy") }}</time>
    <h1 class="post-title">{{ title }}</h1>
    {% if image %}
        <figure class="post-image">
            <img src="{{ image }}" alt="{{ title }}">
            {% if imageAlt %}<figcaption>{{ imageAlt }}</figcaption>{% endif %}
        </figure>
    {% endif %}
    <div class="post-content">
        {{ content | safe }}
    </div>
</article>

<div id="twikoo"></div>
<script src="https://cdn.jsdelivr.net/npm/twikoo/dist/twikoo.all.min.js"></script>
<script>
  twikoo.init({
    envId: 'https://twikoo-mstewarts.vercel.app/',
    el: '#twikoo',
    // Hide email field requirement and website field
    requiredFields: ['nick'],
    // Optional: Customize placeholder text
    placeholder: 'Leave your thoughts here... ðŸ’­',
    // Hide website field completely
    onCommentLoaded: function () {
      // Hide website input field
      const websiteField = document.querySelector('#twikoo .tk-row:has(.tk-input[name="url"])');
      if (websiteField) {
        websiteField.style.display = 'none';
      }
      // Make email optional visually
      const emailLabel = document.querySelector('#twikoo label[for*="mail"]');
      if (emailLabel) {
        emailLabel.textContent = emailLabel.textContent.replace('*', '');
      }
    }
  });
</script>

