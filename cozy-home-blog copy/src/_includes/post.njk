---
layout: base.njk
title: "{{ title }}"
---

<article class="blog-post">
    <time datetime="{{ date | date("yyyy-MM-dd") }}" class="post-date">{{ date | date("MMMM dd, yyyy") }}</time>
    <h1 class="post-title">{{ title }}</h1>
    {% if image %}
        <figure class="post-image">
            <img src="{{ image }}" alt="{{ title }}">
            {% if imageAlt %}<figcaption>{{ imageAlt }}</figcaption>{% endif %}
        </figure>
    {% endif %}
    <div class="post-content">
        {{ content | safe }}
    </div>
</article>

{# === Hyvor Talk Comment Section Goes Here === #}
<div class="comments-section container">
    <hyvor-talk-comments
        website-id="14088"
        page-id="{{ page.url }}"
    ></hyvor-talk-comments>
</div>
