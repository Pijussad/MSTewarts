<section class="hero">
    <div class="hero-content">
        <h2>Welcome to Your Cozy Corner</h2>
        <p>Step inside, grab a warm drink, and unwind. This is a space dedicated to comfort, inspiration, and sharing the little joys of life.</p>
        <a href="#latest-posts" class="button primary">Explore Stories</a>
    </div>
</section>

<section id="latest-posts" class="latest-posts">
    <h3>Latest Cozy Stories</h3>
    <div class="post-grid">
        {% for post in collections.posts %}
        <article class="post-card">
            <a href="{{ post.url }}">
                {% if post.data.image %}
                    <img src="{{ post.data.image }}" alt="{{ post.data.title }}" class="post-card-image">
                {% else %}
                    <img src="/assets/images/default-post.jpg" alt="Default cozy image" class="post-card-image">
                {% endif %}
            </a>
            <div class="post-card-content">
                <time datetime="{{ post.date | date("yyyy-MM-dd") }}" class="post-card-date">{{ post.date | date("MMMM dd, yyyy") }}</time>
                <h4 class="post-card-title"><a href="{{ post.url }}">{{ post.data.title }}</a></h4>
                <p class="post-card-excerpt">{{ post.data.description | safe }}</p>
                <a href="{{ post.url }}" class="read-more">Read More â†’</a>
            </div>
        </article>
        {% endfor %}
    </div>
</section>

